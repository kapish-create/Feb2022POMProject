<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Demo Cart App Test automtion regression suite"
	thread-count="4" parallel="tests" verbose="3">

	<listeners>
		<listener
			class-name="com.qa.opencart.listners.ExtentReportListener" />
		<listener
			class-name="com.qa.opencart.listners.TestAllureListener" />
		<listener
			class-name="com.qa.opencart.listners.AnnotationTransformer" />
	</listeners>
	<test name="Login page Test">
		<classes>
			<class name="com.qa.opencart.test.LoginPageTest" />
		</classes>
	</test>

	<test name="Accounts page Test">
		<classes>
			<class name="com.qa.opencart.test.AccountsPageTest" />
		</classes>
	</test>
</suite>
